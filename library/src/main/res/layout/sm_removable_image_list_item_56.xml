<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/sm_margin_padding_size_small"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/SM.ShapeAppearanceOverlay.CornerSize10Percent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/removeImage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/sm_margin_padding_size_xsmall"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/sm_remove_logo"
        android:scaleType="centerInside"
        android:src="@drawable/sm_ic_close_circle_44" />

</FrameLayout>
