<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoriesWithPlacesBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?soramitsuMapCategoriesBottomSheetBackground"
    app:behavior_peekHeight="?soramitsuMapCategoriesBottomSheetPeekHeight"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <View
        android:layout_width="?soramitsuMapCategoriesBottomSheetTopperWidth"
        android:layout_height="?soramitsuMapCategoriesBottomSheetTopperHeight"
        android:layout_marginTop="8dp"
        android:background="?soramitsuMapCategoriesBottomSheetTopperDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/categoryWithPlacesSearchTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:boxStrokeColor="?soramitsuMapCategoriesBottomSheetSearchBoxStrokeColor"
        app:hintEnabled="false"
        app:layout_constraintEnd_toStartOf="@id/categoryWithPlacesClearSearchViewButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/categoryWithPlacesSearchTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableStart="?soramitsuMapCategoriesBottomSheetSearchIcon"
            android:drawableLeft="?soramitsuMapCategoriesBottomSheetSearchIcon"
            android:drawablePadding="16dp"
            android:hint="@string/sm_search_by_name_hint"
            android:maxLines="1"
            android:textAppearance="?soramitsuMapCategoriesBottomSheetSearchTextAppearance"
            android:textColorHint="?soramitsuMapCategoriesBottomSheetSearchTextHintColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/categoryWithPlacesClearSearchViewButton"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/sm_content_description_clear_search_field"
        android:src="?soramitsuMapCloseIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/categoryWithPlacesSearchTextInputLayout" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/searchPanelBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="categoryWithPlacesClearSearchViewButton,categoryWithPlacesSearchTextInputLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesWithNearbyPlacesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchPanelBarrier" />

</androidx.constraintlayout.widget.ConstraintLayout>