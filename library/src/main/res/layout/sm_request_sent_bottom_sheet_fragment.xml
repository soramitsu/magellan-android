<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/sm_margin_padding_size_xxlarge"
    android:background="@drawable/sm_rounded_background"
    >

    <View
        android:layout_width="?attr/sm_categoriesBottomSheetTopperWidth"
        android:layout_height="?attr/sm_categoriesBottomSheetTopperHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sm_margin_padding_size_small"
        android:background="?attr/sm_categoriesBottomSheetTopperDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sm_margin_padding_size_xxlarge"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sm_ic_check_circle_80" />

    <TextView
        android:id="@+id/titleTextView"
        style="?sm_textViewStyleSemiBold15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sm_margin_padding_size_xxlarge"
        android:gravity="center"
        android:text="@string/sm_your_request_is_being_processed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconImageView"
        />

    <TextView
        android:id="@+id/subtitleTextView"
        style="?sm_textViewStyleRegular14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sm_margin_padding_size_medium"
        android:paddingBottom="@dimen/sm_margin_padding_size_medium"
        android:paddingStart="@dimen/sm_margin_padding_size_xxlarge"
        android:paddingEnd="@dimen/sm_margin_padding_size_xxlarge"
        android:gravity="center"
        android:text="@string/sm_we_will_check_the_information_and_notify_you_when_the_place_is_published"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>