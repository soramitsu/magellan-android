<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/soramitsuMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zoomInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_button"
            android:gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="?soramitsuMapCloseIcon"
            android:text="@string/sm_zoom_in_button_caption"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zoomOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_button"
            android:gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="@string/sm_zoom_out_button_caption"
            android:textSize="20sp" />
    </LinearLayout>

    <include layout="@layout/categories_bottom_sheet" />

    <include layout="@layout/category_with_places" />

    <include layout="@layout/place_bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
