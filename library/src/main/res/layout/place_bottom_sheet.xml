<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?soramitsuMapPlaceBottomSheetBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="8dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="?soramitsuMapPlaceBottomSheetPeekHeight"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageButton
        android:id="@+id/closeDialogButton"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sm_close"
        android:src="?soramitsuMapCloseIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <jp.co.soramitsu.feature.maps.impl.presentation.places.PlaceView
        android:id="@+id/placeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/basicInfoBottomBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginVertical="16dp"
        android:background="?soramitsuMapCategoriesBottomSheetSeparatorColor"
        app:layout_constraintTop_toBottomOf="@id/placeListItem" />

    <TextView
        android:id="@+id/additionalInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/sm_information"
        android:textAppearance="?soramitsuMapPlaceInfoTitleTextAppearance"
        app:layout_constraintTop_toBottomOf="@id/basicInfoBottomBar" />

    <TextView
        android:id="@+id/additionalInfoMobilePhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/sm_mobile_phone"
        android:textAppearance="?soramitsuMapPlaceInfoKeyTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoTitle" />

    <TextView
        android:id="@+id/additionalInfoMobilePhoneValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.Soramitsu.MaterialComponents.Body2.Clickable"
        app:layout_constraintBaseline_toBaselineOf="@id/additionalInfoMobilePhoneLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="+855 98 333 395" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/additionalInfoMobilePhoneGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="additionalInfoMobilePhoneValue,additionalInfoMobilePhoneLabel" />

    <TextView
        android:id="@+id/additionalInfoWebsiteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/sm_website"
        android:textAppearance="?soramitsuMapPlaceInfoKeyTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoMobilePhoneLabel" />

    <TextView
        android:id="@+id/additionalInfoWebsiteValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.Soramitsu.MaterialComponents.Body2.Clickable"
        app:layout_constraintBaseline_toBaselineOf="@id/additionalInfoWebsiteLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="www.degree.com" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/additionalInfoWebsiteGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="additionalInfoWebsiteValue,additionalInfoWebsiteLabel" />

    <TextView
        android:id="@+id/additionalInfoFacebookLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/sm_facebook"
        android:textAppearance="?soramitsuMapPlaceInfoKeyTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoWebsiteLabel" />

    <TextView
        android:id="@+id/additionalInfoFacebookValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.Soramitsu.MaterialComponents.Body2.Clickable"
        app:layout_constraintBaseline_toBaselineOf="@id/additionalInfoFacebookLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="95DegreesCoffee" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/additionalInfoFacebookGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="additionalInfoFacebookValue,additionalInfoFacebookLabel" />

    <TextView
        android:id="@+id/additionalInfoAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:text="@string/sm_address"
        android:textAppearance="?soramitsuMapPlaceInfoKeyTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoFacebookLabel" />

    <TextView
        android:id="@+id/additionalInfoAddressValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.Soramitsu.MaterialComponents.Body2.Clickable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/additionalInfoAddressLabel"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoAddressLabel"
        tools:text="#34A, St 240 Sangkat Chak Tomuk, Phnom Penh 12207, Cambodia" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/additionalInfoAddressGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="additionalInfoAddressValue,additionalInfoAddressLabel" />

    <TextView
        android:id="@+id/additionalInfoOpenHoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:text="@string/sm_open_hours"
        android:textAppearance="?soramitsuMapPlaceInfoKeyTextAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoAddressValue" />

    <TextView
        android:id="@+id/additionalInfoOpenHoursStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:text="@string/sm_undefined_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/additionalInfoOpenHoursLabel"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoOpenHoursLabel"
        tools:text="@string/sm_open_now" />

    <TextView
        android:id="@+id/additionalInfoOpenHoursValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:textColor="?soramitsuMapPlaceTitleTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/additionalInfoOpenHoursStatus"
        app:layout_constraintTop_toBottomOf="@id/additionalInfoOpenHoursStatus"
        tools:text="Daily 6:30 am â€” 8:30 pm" />

</androidx.constraintlayout.widget.ConstraintLayout>
