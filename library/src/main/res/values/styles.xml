<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SM.Widget.Soramitsu.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="SM.Widget.Soramitsu.Map.Category" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/SM.TextAppearance.Soramitsu.MaterialComponents.Headline6</item>
    </style>

    <style name="SM.Widget.Soramitsu.Map.Category.ResetButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:text">@string/sm_reset</item>
    </style>

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Headline6" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Subtitle2.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="SM.TextAppearance.Soramitsu.MaterialComponents.Caption.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SM.Widget.Soramitsu.TextView.Bold20" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">
            @style/SM.TextAppearance.Soramitsu.MaterialComponents.Headline6
        </item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2D2926</item>
    </style>

    <style name="SM.Widget.Soramitsu.TextView.SemiBold15" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">
            @style/SM.TextAppearance.Soramitsu.MaterialComponents.Subtitle2
        </item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SM.Widget.Soramitsu.TextView.Regular15" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">
            @style/SM.TextAppearance.Soramitsu.MaterialComponents.Body1
        </item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SM.Widget.Soramitsu.TextView.Regular14" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">
            @style/SM.TextAppearance.Soramitsu.MaterialComponents.Caption
        </item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A1A1A0</item>
    </style>
</resources>